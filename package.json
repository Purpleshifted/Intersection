{
  "name": "intersection-nextjs",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "realtime",
    "noisecraft"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:vercel": "rm -rf noisecraft/.next realtime/.next noisecraft/node_modules/.next realtime/node_modules/.next 2>/dev/null || true && next build",
    "start": "next start",
    "prod:build": "yarn ws:build && yarn build",
    "prod:start": "sh -c 'yarn workspace realtime start & next start'",
    "prod": "yarn prod:build && yarn prod:start",
    "lint": "eslint",
    "ws:build": "yarn workspaces run build || true",
    "ws:dev": "echo 'Use docker compose for dev (web+realtime). Noisecraft dev: yarn workspace noisecraft dev'"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "meshline": "^3.3.1",
    "next": "16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "socket.io-client": "^4.6.1",
    "three": "^0.181.2",
    "three.meshline": "^1.4.0",
    "threejs-meshline": "2.0.12",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
